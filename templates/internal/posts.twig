{% extends "internal/ibase.twig" %}

{% block title %}Sistema{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="row justify-content-md-center">
        <div class="col-lg-8 col-md-10 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="post_published-tab" data-toggle="tab" href="#post_published" role="tab" aria-controls="home" aria-selected="true">
                                {{ diccionario.published }} <span class="badge badge-primary">1</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="post_draft-tab" data-toggle="tab" href="#post_draft" role="tab" aria-controls="profile" aria-selected="false">
                                {{ diccionario.drats }} <span class="badge badge-primary">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="post_trash-tab" data-toggle="tab" href="#post_trash" role="tab" aria-controls="contact" aria-selected="false">
                                {{ diccionario.in_trash }} <span class="badge badge-primary">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="post_search-tab" data-toggle="tab" href="#post_search" role="tab" aria-controls="contact" aria-selected="false">
                                {{ diccionario.search }}
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="post_published" role="tabpanel" aria-labelledby="home-tab">
                            <div class="media border-bottom">
                                <img class="mr-3" src="{{ base_url() }}/img/yoshi.png" alt="Generic placeholder image">
                                <div class="media-body">
                                    <h5 class="mt-0">Titulo del post</h5>
                                    <p>Extrato del post</p>
                                    <p><small>22 de nov. de 2018 21:31</small></p>
                                </div>
                            </div>
                            <div class="media border-bottom">
                                <img class="mr-3" src="{{ base_url() }}/img/toad.png" alt="Generic placeholder image">
                                <div class="media-body">
                                    <h5 class="mt-0">Titulo del post</h5>
                                    <p>Extrato del post</p>
                                    <p><small>22 de nov. de 2018 21:31</small></p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="post_draft" role="tabpanel" aria-labelledby="profile-tab">...</div>
                        <div class="tab-pane fade" id="post_trash" role="tabpanel" aria-labelledby="contact-tab">...</div>
                        <div class="tab-pane fade" id="post_search" role="tabpanel" aria-labelledby="contact-tab">...</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-8 col-md-10 col-sm-12 col-xs-12">
            
        </div>
    </div>
{% endblock %}
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    {% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ base_url() }}/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/css/styles.css">
    <link rel="icon" href="{{ base_url() }}/img/favicon.ico" type="image/x-icon">
    <script src="{{ base_url() }}/js/jquery-3.3.1.min.js"></script>
    <script src="{{ base_url() }}/js/bootstrap.min.js"></script>
    <link rel="stylesheet/scss" type="text/css" href="{{ base_url() }}/scss/_display.scss">
    <title>{% block title %}{% endblock %}</title>
    {% endblock %}
  </head>
  <body>
  <nav class="navbar sticky-top navbar-dark bg-dark navbar-expand-lg">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <a class="navbar-brand" href="{{ base_url() }}">
        <img src="{{ base_url() }}/img/logo.png" class="nav-img">
      </a>
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ diccionario.home }}</a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ base_url() }}/{{ lang.lang }}/dashboard">{{ diccionario.stats }}</a>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ diccionario.posts }}</a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ base_url() }}/{{ lang.lang }}/posts">{{ diccionario.all_posts }}</a>
            <a class="dropdown-item" href="{{ base_url() }}/{{ lang.lang }}/newpost">{{ diccionario.new_post }}</a>
            <a class="dropdown-item" href="{{ base_url() }}/{{ lang.lang }}/categories">{{ diccionario.categories }}</a>
            <a class="dropdown-item" href="#">{{ diccionario.tags }}</a>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ diccionario.media }}</a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">{{ diccionario.images }}</a>
            <a class="dropdown-item" href="#">{{ diccionario.files }}</a>
            <a class="dropdown-item" href="#">{{ diccionario.videos }}</a>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ diccionario.pages }}</a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">{{ diccionario.all_pages }}</a>
            <a class="dropdown-item" href="#">{{ diccionario.new_page }}</a>
          </div>
        </li>
      </ul>
      <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
        <li class="nav-item">
          <a class="nav-item nav-link mr-md-2" href="{{ base_url() }}/{{ diccionario.lang }}/profile">{{ username }}</a>
        </li>
        <li class="nav-item">
          <a class="nav-item nav-link mr-md-2" href="{{ base_url() }}/{{ diccionario.lang }}/logout">{{ diccionario.logout }}</a>
        </li>
      </ul>
    </div>
  </nav>
      <div class="container">
        {% block body %}{% endblock %}
      </div>
  </body>
</html>
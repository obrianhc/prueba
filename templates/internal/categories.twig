{% extends "internal/ibase.twig" %}

{% block title %}{{ diccionario.categories }}{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="row justify-content-md-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <form name="form1" method="post" action="">
                                <div class="form-group">
                                    <label>{{ diccionario.category }}</label>
                                    <input type="text" class="form-control" name="category" required="required">
                                </div>
                                <div class="form-group">
                                    <label>{{ diccionario.top_category }}</label>
                                    <select class="form-control" name="top_category">
                                        <option></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>{{ diccionario.category }}</label>
                                    <textarea class="form-control" name="description" rows="5"></textarea>
                                </div>
                                <input type="submit" class="btn btn-primary" value="Agregar">
                            </form>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <form name="form2" method="post" action="">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th><input type="checkbox" class="selectall"></th>
                                            <th>{{ diccionario.name }}</th>
                                            <th>{{ diccionario.description }}</th>
                                            <th>{{ diccionario.quantity }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th><input type="checkbox" class="selectall"></th>
                                            <th>{{ diccionario.name }}</th>
                                            <th>{{ diccionario.description }}</th>
                                            <th>{{ diccionario.quantity }}</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends "base.html" %}

{% block title %}Iniciar sesi&oacute;n{% endblock %}
{% block head %}
    {{ parent() }}
    <base href="{{ base_url() }}/"/>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {# si existe error de login #}
                {% if flash.message %}
                    <div class="alert alert-danger alert-dismissable" style="margin-top: 25px">
                        {{ flash.message }}
                    </div>
                {% endif %}
 
                {% if flash.logout %}
                    {# si el usuario ha cerrado sesi√≥n #}
                    <div class="alert alert-success alert-dismissable" style="margin-top: 25px">
                        {{ flash.logout }}
                    </div>
                {% endif %}
 
                <div class="login-panel panel panel-default" style="margin-top:40px">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" action="{{baseUrl()}}/login">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus value="{{ flash.email }}">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me" {% if flash.remember %}checked{% endif %}>Remember Me
                                    </label>
                                </div>
 
                                <div class="form-group">
                                    <div class="col-xs-6 text-center">
                                        <button type="submit" class="btn btn-md btn-success btn-block">Login</button>
                                    </div>
                                    <div class="col-xs-6 text-center">
                                        <a href="{{siteUrl('/')}}" class="btn btn-md btn-danger btn-block">Cancel</a>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}